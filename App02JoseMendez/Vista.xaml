<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App02JoseMendez.Vista">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Bienvenido Usuario!" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
            </Frame>
            <Entry x:Name="txtusuario" Placeholder="Ingrese el Usuario"/>
            <Entry x:Name="txtcontraseña" Placeholder="Ingrese Contraseña" IsPassword="True"/>
            <Button x:Name="btnAbrir" Text="Abrir Ventana 2" Clicked="btnAbrir_Clicked"/>
            <Label Text="" x:Name="lblMensaje" TextColor="Red"/>

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>